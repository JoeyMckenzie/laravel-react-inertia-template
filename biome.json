{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": [
			"./resources/js/ssr.tsx",
			"./resources/js/components/ui/*.tsx"
		]
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 4,
		"indentStyle": "space"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}

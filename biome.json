{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "include": ["resources/js/**/*.tsx", "*.config.ts"],
        "ignore": ["resources/js/ssr.tsx"]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        },
        "include": ["resources/js/**/*.tsx"],
        "ignore": ["resources/js/ssr.tsx", "resources/js/Components/ui/*.tsx"]
    }
}
